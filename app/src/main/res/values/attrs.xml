<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ArcImageView">
        <attr name="arcHeight" format="integer"/>
    </declare-styleable>

    <declare-styleable name="RoundImageView">
        <attr name="cornerAngel" format="integer"/>
    </declare-styleable>

    <declare-styleable name="CustomBigImage">
        <attr name="customCornerAngel" format="integer"/>
    </declare-styleable>

    <declare-styleable name="SBGASortableNinePhotoLayout">
        <!-- 是否显示加号，默认值为 true -->
        <attr format="boolean" name="bga_snpl_plusEnable"/>
        <!-- 是否可拖拽排序，默认值为 true -->
        <attr format="boolean" name="bga_snpl_sortable"/>
        <!-- 删除按钮图片，默认值为 R.mipmap.bga_pp_ic_delete -->
        <attr format="reference" name="bga_snpl_deleteDrawable"/>
        <!-- 可选择图片的总张数,默认值为 9 -->
        <attr format="integer" name="bga_snpl_maxItemCount"/>
        <!-- 列数,默认值为 3 -->
        <attr format="integer" name="bga_snpl_itemSpanCount"/>
        <!-- 删除按钮是否重叠四分之一，默认值为 false -->
        <attr format="boolean" name="bga_snpl_deleteDrawableOverlapQuarter"/>
        <!-- 添加按钮图片，默认值为 R.mipmap.bga_pp_ic_plus -->
        <attr format="reference" name="bga_snpl_plusDrawable"/>
        <!-- Item 条目圆角尺寸，默认值为 0dp -->
        <attr format="dimension|reference" name="bga_snpl_itemCornerRadius"/>
        <!-- Item 间的水平和垂直间距，默认值为 4dp -->
        <attr format="dimension|reference" name="bga_snpl_itemWhiteSpacing"/>
        <!-- 出去九宫格部分的空白区域的尺寸，默认值为 100dp -->
        <attr format="dimension|reference" name="bga_snpl_otherWhiteSpacing"/>
        <!-- 占位图资源，默认值为 R.mipmap.bga_pp_ic_holder_light -->
        <attr format="reference" name="bga_snpl_placeholderDrawable"/>
        <!-- 是否可编辑，默认值为 true -->
        <attr format="boolean" name="bga_snpl_editable"/>
        <!-- item 的尺寸，大于 0dp 时优先级高于 bga_snpl_otherWhiteSpacing，默认值为 0dp -->
        <attr format="dimension|reference" name="bga_snpl_itemWidth"/>
        <attr format="integer" name="bga_snpl_maxItemDisplayBeforeExpand"/>
        <!-- 是否展开 -->
        <attr format="boolean" name="bga_snpl_isExpand"/>
        <!-- 未展开时在最后一张图上显示的蒙层 -->
        <attr format="reference" name="bga_snpl_maskBackground"/>
        <!-- 蒙层字体颜色 -->
        <attr format="reference" name="bga_snpl_maskTextColor"/>
        <!-- 当只有一张图片时，是否显示成大图，默认值为 true -->
        <attr format="boolean" name="bga_snpl_showAsLargeWhenOnlyOne"/>
    </declare-styleable>

    <declare-styleable name="VoteView">
        <attr name="leftNum" format="integer"/>
        <attr name="leftStartColor" format="color"/>
        <attr name="leftEndColor" format="color"/>
        <attr name="rightNum" format="integer"/>
        <attr name="rightStartColor" format="color"/>
        <attr name="rightEndColor" format="color"/>
        <attr name="inclination" format="integer"/>
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>

    </declare-styleable>

</resources>