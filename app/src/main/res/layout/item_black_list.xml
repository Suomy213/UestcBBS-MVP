<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:selectableItemBackground">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >

        <com.scatl.uestcbbs.custom.imageview.CircleImageView
            android:id="@+id/item_black_list_avatar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/item_black_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/item_black_list_avatar"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/item_black_list_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/item_black_list_avatar"
            android:layout_marginStart="10dp"
            android:layout_below="@id/item_black_list_name"
            android:layout_marginTop="2dp"
            android:textSize="12sp"
            />

        <ImageView
            android:id="@+id/item_black_list_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:clickable="true"
            android:focusable="true"
            app:tint="@color/colorPrimary"/>

    </RelativeLayout>

</LinearLayout>
