<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/vote_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/vote_view_support_progress"
            android:layout_width="wrap_content"
            android:layout_height="8dp"
            android:indeterminate="false"
            android:progress="100"
            android:progressDrawable="@drawable/shape_progress_support"
            android:layout_gravity="center_vertical"
            style="?android:attr/progressBarStyleHorizontal" />

        <ProgressBar
            android:id="@+id/vote_view_against_progress"
            android:layout_width="wrap_content"
            android:layout_height="8dp"
            android:indeterminate="false"
            android:progress="100"
            android:progressDrawable="@drawable/shape_progress_against"
            android:layout_gravity="center_vertical"
            style="?android:attr/progressBarStyleHorizontal" />


    </LinearLayout>


</LinearLayout>